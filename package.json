{
  "name": "minimal-utility-bar",
  "version": "1.0.0",
  "description": "Una barra di utilit√† minimalista per desktop con informazioni di sistema e timer pomodoro",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64",
    "build-win-portable": "electron-builder --win --x64 --dir",
    "build-win-no-sign": "electron-builder --win --x64 --config.forceCodeSigning=false",
    "dev": "electron . --dev",
    "dist": "electron-builder --publish=never",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LorenzoScalvini/Minimal-Utility-Bar.git"
  },
  "keywords": [
    "electron",
    "utility",
    "system",
    "pomodoro",
    "desktop",
    "bar"
  ],
  "author": "Lorenzo Scalvini",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LorenzoScalvini/Minimal-Utility-Bar/issues"
  },
  "homepage": "https://github.com/LorenzoScalvini/Minimal-Utility-Bar#readme",
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^24.6.4",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "systeminformation": "^5.21.9"
  },
  "build": {
    "appId": "com.lorenzoscalvini.minimal-utility-bar",
    "productName": "Minimal Utility Bar",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!dist/**/*",
      "!build/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "shortcutName": "Minimal Utility Bar",
      "deleteAppDataOnUninstall": false
    },
    "forceCodeSigning": false,
    "electronDownload": {
      "mirror": "https://github.com/castlabs/electron-releases/releases/download/v"
    }
  }
}
